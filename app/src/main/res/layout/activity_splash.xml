<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="5dp"
        android:src="@mipmap/app_icon">
    </ImageView>

    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/app_icon"
        android:text="@string/app_name"
        android:textSize="20dp" />
    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/loading_process"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/app_title"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        style="@style/SpinKitView.ChasingDots"
        app:SpinKit_Color="#003366"
        />

    <TextView
        android:id="@+id/link_toped"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/link_tokopedia"
        android:textSize="15dp"
        android:layout_below="@id/loading_process"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold|italic"
        android:onClick="openTokopedia"/>

    <TextView
        android:id="@+id/to_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/continue_to_app"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:onClick="launchHome"
        android:layout_marginBottom="30dp"/>


</RelativeLayout>
